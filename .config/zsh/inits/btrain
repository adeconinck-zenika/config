local bTrainHome=$zinstalls/bullettrain
if [ ! -d $bTrainHome  ];then
  git clone git@github.com:caiogondim/bullet-train-oh-my-zsh-theme.git $bTrainHome
  ln -s ../../bullettrain/bullet-train.zsh-theme $ZSH_CUSTOM/themes
fi

ZSH_THEME="bullet-train"

BULLETTRAIN_CONTEXT_DEFAULT_USER=alban

BULLETTRAIN_PROMPT_CHAR=⮩

BULLETTRAIN_EXEC_TIME_SHOW=true

BULLETTRAIN_PROMPT_ORDER=(
  status
  cmd_exec_time
  dir
  git
)

